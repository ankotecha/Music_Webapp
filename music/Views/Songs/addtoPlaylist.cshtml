﻿@model music.Models.Playlists

@ViewBag.songid

@using (Html.BeginForm("addtoplaylist", "Songs", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Playlists</h4>
        <hr />


        <div class="form-group">
            @Html.LabelFor(model => model.PlaylistName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-offset-2 col-md-10">

                @Html.DropDownList("Playlists", ViewBag.allplaylist as IEnumerable<SelectListItem>, "Select Playlist")

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
